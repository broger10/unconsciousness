generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  profile       Profile?
  subscription  Subscription?
  onboardingResponses OnboardingResponse[]
  visions       Vision[]
  checkins      DailyCheckin[]
  insights      Insight[]
  journals      Journal[]
  compatibilities Compatibility[]
  lunarRituals    LunarRitual[]
  pushSubscriptions PushSubscription[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Subscription {
  id                   String   @id @default(cuid())
  userId               String   @unique
  user                 User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  stripeCustomerId     String   @unique
  stripeSubscriptionId String?  @unique
  stripePriceId        String?
  status               String   @default("free") // "free", "active", "canceled", "past_due"
  plan                 String   @default("free") // "free", "monthly", "yearly"
  currentPeriodStart   DateTime?
  currentPeriodEnd     DateTime?
  cancelAtPeriodEnd    Boolean  @default(false)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Profile {
  id                 String   @id @default(cuid())
  userId             String   @unique
  user               User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Birth data
  birthDate          DateTime?
  birthTime          String?    // "HH:MM" format
  birthCity          String?
  birthLat           Float?
  birthLng           Float?

  // Natal chart (calculated)
  sunSign            String?
  moonSign           String?
  risingSign         String?
  mercurySign        String?
  venusSign          String?
  marsSign           String?
  jupiterSign        String?
  saturnSign         String?
  chironSign         String?
  northNodeSign      String?
  natalChartData     Json?      // Full chart details

  // Credits (free users start with 30, premium users have unlimited)
  credits            Int      @default(30)

  // Psychological profile
  awarenessScore     Int      @default(0)
  values             String[] @default([])
  blindSpots         String[] @default([])
  strengths          String[] @default([])
  shadows            String[] @default([])
  personalitySummary String?  @db.Text
  mythologyNarrative String?  @db.Text
  shadowMapNarrative String?  @db.Text

  onboardingComplete Boolean  @default(false)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model OnboardingResponse {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  step       Int
  question   String   @db.Text
  answer     String   @db.Text
  aiAnalysis String?  @db.Text
  createdAt  DateTime @default(now())
}

model Vision {
  id            String   @id @default(cuid())
  userId        String
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  topic         String
  versionNumber Int
  title         String
  narrative     String   @db.Text
  milestones    String[] @default([])
  reasoning     String   @db.Text
  cosmicReason  String?  @db.Text  // Astrological reasoning
  emoji         String   @default("âœ¨")
  sessionId     String
  createdAt     DateTime @default(now())
}

model DailyCheckin {
  id             String   @id @default(cuid())
  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  mood           Int
  energy         Int
  cosmicEnergy   Int?     // 1-5 how aligned with the cosmos
  responses      Json
  aiInsight      String?  @db.Text
  transitContext String?  @db.Text  // What transits were active
  createdAt      DateTime @default(now())
}

model Insight {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type        String   // "transit", "shadow", "pattern", "growth", "prediction", "chat", "daily"
  title       String
  content     String   @db.Text
  userMessage String?  @db.Text  // User's question (for chat type)
  source      String?  // "natal", "transit", "checkin", "journal", "chat"
  urgency     Int      @default(0) // 0-10, how cosmically significant
  createdAt   DateTime @default(now())
}

model Journal {
  id             String   @id @default(cuid())
  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  content        String   @db.Text
  cosmicContext  String?  @db.Text  // What transits were active when written
  aiReflection   String?  @db.Text  // AI analysis of the entry
  mood           String?             // Detected mood
  themes         String[] @default([])
  tags           String[] @default([])
  createdAt      DateTime @default(now())
}

model Compatibility {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  person2Name     String?
  person2BirthDate DateTime
  person2BirthTime String?
  person2BirthCity String?
  person2ChartData Json?
  analysis        String   @db.Text
  highlightQuote  String?  @db.Text  // Most powerful quote for sharing
  createdAt       DateTime @default(now())
}

model LunarRitual {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  lunarPhase  String   // "new_moon" | "full_moon"
  lunarSign   String   // Sign of the moon during this event
  aiMessage   String   @db.Text
  intention   String?  @db.Text  // User's intention/release text
  completed   Boolean  @default(false)
  cycleDate   DateTime // The actual lunar event date
  createdAt   DateTime @default(now())
}

model PushSubscription {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  subscription Json     // Web Push subscription object
  active       Boolean  @default(true)
  createdAt    DateTime @default(now())
}
